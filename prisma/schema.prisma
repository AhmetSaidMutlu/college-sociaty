datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ScholarshipApplication {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName     String
  email        String
  institution  String
  studyField   String
  academicYear String
  motivation   String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

